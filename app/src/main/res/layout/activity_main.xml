<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    android:padding="0dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_player_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player2_textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/player2_textView"
        android:layout_marginBottom="21dp"
        android:editable="true"
        android:text="User Player"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player1_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/new_game_button"
        android:layout_alignRight="@+id/new_game_button"
        android:layout_alignTop="@+id/player3_textView"
        android:editable="true"
        android:text="Player1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player3_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_player_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:editable="true"
        android:text="Player3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player2_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_game_button"
        android:layout_alignBottom="@+id/new_game_button"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_toLeftOf="@+id/new_game_button"
        android:layout_toStartOf="@+id/new_game_button"
        android:editable="true"
        android:text="Player2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_game_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:enabled="true"
        android:onClick="restartApp"
        android:text="New Game"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/deck_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/player3_textView"
        android:layout_toRightOf="@+id/player3_textView"
        android:text="Deck"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
